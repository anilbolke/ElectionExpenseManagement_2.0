        <% 
            int totalExpenses = expenses != null ? expenses.size() : 0;
            double totalAmount = 0;
            if (expenses != null) {
                for (Expense e : expenses) {
                    totalAmount += e.getExpenseAmount().doubleValue();
                }
            }
        %>
